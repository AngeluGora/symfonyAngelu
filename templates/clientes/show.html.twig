{% extends 'base.html.twig' %}

{% block title %}Detalles del Cliente{% endblock %}

{% block body %}
    <h1>Detalles del Cliente</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ cliente.id }}</td>
                <td>{{ cliente.nombre }}</td>
                <td>{{ cliente.apellidos }}</td>
                <td>{{ cliente.telefono }}</td>
                <td>{{ cliente.direccion }}</td>
                <td>
                    <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}">Editar</a>
                    <a href="{{ path('app_cliente_delete', {'id': cliente.id}) }}">Eliminar</a>
                </td>
            </tr>
        </tbody>
    </table>
    
    <a href="{{ path('app_clientes') }}">Volver a la Lista de Clientes</a>
{% endblock %}
