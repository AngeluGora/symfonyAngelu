{% extends 'base.html.twig' %}

{% block title %}Lista de Clientes{% endblock %}

{% block body %}
    <h1>Lista de Clientes</h1>

    {% if clientes is empty %}
        <p>No hay clientes registrados.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for cliente in clientes %}
                    <tr>
                        <td>{{ cliente.nombre }}</td>
                        <td>{{ cliente.apellidos }}</td>
                        <td>{{ cliente.telefono }}</td>
                        <td>{{ cliente.direccion }}</td>
                        <td>
                            <a href="{{ path('app_cliente_show', {'id': cliente.id}) }}">Ver Detalles</a>
                            <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}">Editar</a>
                            <a href="{{ path('app_cliente_delete', {'id': cliente.id}) }}">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    
    <a href="{{ path('app_cliente_new') }}">Crear Nuevo Cliente</a><br>
    <a href="{{ path('home') }}">Inicio</a><br>
{% endblock %}
